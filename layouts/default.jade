doctype 5
html
  head
    block head
      title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/layouts/core.min.css?#{cacheBreaker}')
    link(rel='stylesheet', href='/layouts/default.min.css?#{cacheBreaker}')
    block neck
  body
    div.navbar.navbar-inverse.navbar-fixed-top
      div.container
        div.navbar-header
          a.navbar-brand(href='/', rel='tooltip', data-title='Play Picross With GitHub Identicons', data-placement='bottom')
            img.navbar-logo(src='/media/logo-inverse.png')
          button.navbar-toggle.collapsed(data-toggle='collapse', data-target='.my-navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
        div.navbar-collapse.my-navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li: iframe(src='http://nodeknockout.com/iframe/throw-42', frameborder='0', scrolling='no', allowtransparency='true', width='115', height='25')
    
    div.page
      div.container
        block body
    
    div.footer
      div.container
        span.copyright.pull-right
          &#169; #{copyrightYear} #{copyrightName}
        ul.links
          li: a(href='/') Home
        div.clearfix
    
    div.ajax-spinner
      img(src='/media/ajax-pulse.gif')
    
    //if lte IE 9
      script(src='/layouts/ie-sucks.min.js?#{cacheBreaker}')
    script(src='/layouts/core.min.js?#{cacheBreaker}')
    
    block feet
